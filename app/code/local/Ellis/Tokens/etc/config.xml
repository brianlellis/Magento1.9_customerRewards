<?xml version="1.0" encoding="UTF-8"?>
<config>
  <modules>
    <Ellis_Tokens>
      <version>0.0.2</version>
    </Ellis_Tokens>
  </modules>

  <global>

    <blocks>
      <tokens>
        <class>Ellis_Tokens_Block</class>
      </tokens>
    </blocks>

    <helpers>
      <tokens>
        <class>Ellis_Tokens_Helper</class>
      </tokens>
    </helpers>

    <models>

      <ellis_tokens>
        <class>Ellis_Tokens_Model</class>
        <resourceModel>tokens_resource</resourceModel>
      </ellis_tokens>

      <ellis_tokens_resource>
      	<class>Ellis_Tokens_Model_Resource</class>
        <entities>
            <tokens>
                <table>ellis_tokens</table>
            </tokens>
        </entities>
      </ellis_tokens_resource>
      
    </models>

    <resources>
        <ellis_tokens_setup>
            <setup>
                <module>Ellis_Tokens</module>
            </setup>
        </ellis_tokens_setup>
    </resources>

  </global>
</config>